{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "build",
    "tests",
    "**/__tests__/**/*",
    "**/__stories__/**/*",
    "*.test.ts",
    "*.test.tsx"
  ],
  "include": [
    "src"
  ]
}
